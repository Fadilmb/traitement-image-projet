    nb = size(f)(1);
    nb = nb + 1;
    path = strcat(["subject" string(nb) ".png"]);

    cd("./base_de_donnee");
    handles.Respond.String = "Saving..please wait";
    handles.Respond.ForegroundColor = [1,0.6,0.2];
    imwrite(img_save, path);
    saved = imread(path);
    imshow(saved);

    
    add = size(database_image);
    disp(add);
    add = add + 1;
    database_image(add) = imread(path)(1);
    img_tmp = lbp(database_image(add));
    database_lbp(add) = hist_lbp(img_tmp);
    handles.Respond.String = "Registration confirmed";
    handles.Respond.ForegroundColor = [0.15,0.80,0.15];
    sleep(3000);
    cd("..");
    
